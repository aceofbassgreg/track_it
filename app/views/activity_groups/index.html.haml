.row
  .span6
    %h1.padding_bottom1 Activity Groups

    - if !@activity_groups.empty? or !@activities_base.empty?
    
      %ul.span6
        %li.span1
          %i.icon-globe
        %li.span2 Name
        %li.span2 Actions
          
      = render @activity_groups
      = render @activities_base
    - else
      %h2.extra_padding You have no Activity Groups yet. Add one and start managing your time. 
    
    =link_to "Create Activity Group", new_activity_group_path, {class: 'btn'}
    =link_to "Create Activity", new_activity_path, {class: 'btn'}

  .span6
    %h2 Tasks
    .well  
      %h4.label.label-important Incomplete Tasks
      - @activities.each do |activity|
        %h3= activity.title
        #incomplete-tasks= render partial: activity.incomplete_tasks
    .well  
      %h4.label.label-success Complete Tasks
      - @activities.each do |activity|
        %h3= activity.title
        #complete-tasks= render partial: activity.complete_tasks
